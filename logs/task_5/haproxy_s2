root@52711b2829de:/# ^C
root@52711b2829de:/# air-de-youndzo:~ youndzofrancine$ docker exec -ti ha /bin/bash
root@5c56eb3d7cfa:/# cat /usr/local/etc/haproxy/haproxy.cfg
